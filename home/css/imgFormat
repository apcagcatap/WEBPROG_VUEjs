.circle {
          width: 150px; /* Set the desired width */
          height: 150px; /* Set the desired height */
          border-radius: 50%; /* Makes it a circle */
          overflow: hidden; /* Ensures the image is cropped */
          display: inline-block; /* Optional: for proper alignment */
        }

.circle img {
          width: 100%; /* Ensure the image fills the circle */
          height: 100%; /* Scale the image proportionally */
          object-fit: cover; /* Crops the image to fit the container */
        }
